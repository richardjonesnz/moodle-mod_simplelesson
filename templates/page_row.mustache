{{!
    @template mod_simplelesson/pages_edit

    Moodle table rendering template for lesson page management

    This template renders and html table of page data.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example data (json):
        {
         "sequence": "1",
         "title": "column name",
         "previous": "1",
         "next": "1",
         "question": "1"],
         "actions": ["edit", ["icon", "component", "core"]]
        }
}}
<tr class="danger">
  <td>{{sequence}}</td>
  <td>{{pagetitle}}</td>
  <td>{{previous}}</td>
  <td>{{next}}</td>
  <td>{{#question}}<a href="{{{questionurl}}}">{{questionlink}}</a>{{/question}}</td>
  <td>
    {{# actions.edit}}
      {{> mod_simplelesson/page_actions}}
    {{/ actions.edit}}
    {{# actions.preview}}
      {{> mod_simplelesson/page_actions}}
    {{/ actions.preview}}
    {{# actions.delete}}
      {{> mod_simplelesson/page_actions}}
    {{/ actions.delete}}
    {{# actions.moveup}}
      {{> mod_simplelesson/page_actions}}
    {{/ actions.moveup}}
    {{# actions.movedown}}
      {{> mod_simplelesson/page_actions}}
    {{/ actions.movedown}}
  </td>
</tr>
