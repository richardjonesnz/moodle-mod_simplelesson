{{!
    @template mod_simplelesson/managemelesson
    Renders the simplelesson lesson management buttons

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * addpage String of formatted html representing a url

    Example context (json):
        {
            "addpage": "https://yourmoodle/mod/yourmod/somepage.php?id=x"
        }
}}
<!-- Bootstrap Modal W3 schools -->
<div id="simplelesson_edit_questions_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
      <h4 class="modal-title">{{#str}}select_category, simplelesson{{/str}}</a></h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        {{#str}}question_adding, simplelesson{{/str}}<br>
        {{{mform}}}
        <p class="text-left"><a href="{{qlinkurl}}">{{#str}}qlinkheader, simplelesson{{/str}}</a></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>